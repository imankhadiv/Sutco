
= simple_form_for(@workshop) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :description
    %br= f.label :date    
    = f.text_field :date, as: :bootstrap_datepicker
    %br= f.label :time
    = f.text_field :time, :value => (@workshop.time ? @workshop.time.strftime("%I:%M%p"): ''), as: :bootstrap_timepicker
    = f.input :duration, :label => "Duration (in minutes)"
  
  .form-actions
    = f.button :submit
