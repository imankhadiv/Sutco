%h1 Listing show_dates

%table
  %tr
    %th Title
    %th Date
    %th Time
    %th Show
    %th
    %th
    %th

  - @show_dates.each do |show_date|
    %tr
      %td= show_date.title
      %td= show_date.date
      %td= show_date.time
      %td= show_date.show
      %td= link_to 'Show', show_date
      %td= link_to 'Edit', edit_show_date_path(show_date)
      %td= link_to 'Destroy', show_date, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Show date', new_show_date_path
