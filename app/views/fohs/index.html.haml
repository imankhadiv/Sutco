%h1 Available front of house positions
%table.table.table-striped.table-responsive.table-nonfluid.table-customstyle
  %thead
    %tr
      %th Show
      %th Date
      %th Time
      %th Options
  %thead
    -@show_dates.each do |c|
      - if(c.foh_available)
        %tr
          %td= link_to c.show.name, c.show
          %td= c.date.strftime("%B %d, %Y")
          %td= c.time.strftime("%I:%M%p")
          %td= link_to 'Apply for front of house', new_show_date_foh_path(c)
