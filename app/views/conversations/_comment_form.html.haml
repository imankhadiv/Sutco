.new_comment
  %i.h4.commenter= "Leave a comment"
  .loading= image_tag image_path("ajax-loader.gif"), alt: "Loading"

= simple_form_for([@board, @conversation, @new_comment],remote: true) do |f|
  .form-inputs
    = f.text_area :body, :rows => 3, :cols => 70, :placeholder => 'Enter your Comment here'
  %p
  .form-actions
    = f.submit "Add Comment", remote: true, :class => 'btn btn-primary'