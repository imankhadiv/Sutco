- if @training.errors.any?
  -@training.errors.full_messages.each do |msg|
    %li=msg

= simple_form_for(@training) do |f|
  //= f.error_notification

  .form-inputs
    = f.input :title
    = f.input :category
    = f.input :description
    %br= f.label :date
    = f.text_field :date, as: :bootstrap_datepicker
    %br= f.label :time
    = f.text_field :time, as: :bootstrap_timepicker
    = f.input :duration
    %br

  .form-actions
    = f.button :submit
