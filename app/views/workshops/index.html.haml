.page-header
  %h1 List of Workshops

%table.table.table-striped.table-responsive.table-nonfluid.table-customstyle
  %thead
    %tr
      %th Title
      %th Description
      %th Date
      %th Time
      %th Duration
      - if ((current_user.role? "SeniorCommittee") || (current_user.role? "TechManager"))
        %th{colspan: "3"} Options
      - else
        %th Options
  %tbody
    - @workshops.each do |workshop|
      %tr
        %td= workshop.title
        %td= workshop.description
        %td= workshop.date.strftime("%B %d, %Y")
        %td= workshop.time.strftime("%I:%M%p")
        %td  #{workshop.duration} minutes
        %td= link_to 'View', workshop
        - if ((current_user.role? "SeniorCommittee") || (current_user.role? "TechManager"))
          %td= link_to 'Edit', edit_workshop_path(workshop)
          %td= link_to 'Delete', workshop, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
- if ((current_user.role? "SeniorCommittee") || (current_user.role? "TechManager"))
  %a.btn.btn-info.btn-lg{href: new_workshop_path, role: "button"} Create New Workshop
  %br
  %br


