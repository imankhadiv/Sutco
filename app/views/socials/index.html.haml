%table
  %tr
    %th Title
    %th Location
    %th Description
    %th Date
    %th Time
    %th Duration
    %th{colspan: "3"} Options
 
  - @socials.each do |social|
    %tr
      %td= social.title
      %td= social.location
      %td= social.description
      %td= social.date
      %td= social.time.strftime("%I:%M%p") 
      %td= social.duration
      %td= link_to 'Show', social
      %td= link_to 'Edit', edit_social_path(social)
      %td= link_to 'Destroy', social, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
  %a.btn.btn-success.btn-lg{href: new_social_path, role: "button"} Create New Social
%br
  / = link_to 'New Social Event', new_social_path



