
= simple_form_for(@training) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :category
    = f.input :description
    %br= f.label :date
    = f.text_field :date, as: :bootstrap_datepicker
    %br= f.label :time
    = f.text_field :time, :value => (@training.time ? @training.time.strftime("%I:%M%p") : ''), as: :bootstrap_timepicker
    = f.input :duration, :label => "Duration (in minutes)"
    %br

  .form-actions
    = f.button :submit
