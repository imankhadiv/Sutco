= simple_form_for([@show_role, @role_application]) do |f|
  = f.error_notification
  %p= "You are applying for #{@show_role.position} in #{@show_role.show.name}"


  .form-inputs
    %p= "Why did you apply for the role?"
    = f.text_area :content
    = f.select :status ,options_for_select(["Pending","Approved","Rejected"])

  .form-actions
    = f.button :submit


