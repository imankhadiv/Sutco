// display errors (if any))
= simple_form_for(@social) do |f|
  = f.error_notification

  // display form to fill in required inputs
  .form-inputs
    = f.input :title
    = f.input :location
    = f.input :description
    %br= f.label :date
    = f.text_field :date, as: :bootstrap_datepicker
    %br= f.label :time
    = f.text_field :time, :value => (@social.time ? @social.time.strftime("%I:%M%p") :''), as: :bootstrap_timepicker
    = f.input :duration, :label => "Duration (in minutes)"
    %br

  .form-actions
    = f.button :submit
