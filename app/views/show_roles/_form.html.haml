= simple_form_for(@role) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :position, collection:  ['Lighting Operator','Lighting Designer','Sound Operator','Sound Designer','Assistant Stage Manager','Deputy Stage Manager','Set Designer','Set Construction','Costume Designer','Costume Team','Make up','Make up team','Producer','Director','Dialect Coach','Physical Coach']
    = f.input :required_number
    = f.input :available_number
    = f.association :show

  .form-actions
    = f.button :submit
